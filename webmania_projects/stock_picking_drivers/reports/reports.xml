<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report
            id="report_picking_grouped_categ"
            string="Bon de preparation groupes"
            model="stock.picking"
            report_type="qweb-pdf"
            file="stock_picking_drivers.amh_report_picking_grouped"
            name="stock_picking_drivers.amh_report_picking_grouped"
        />

        <template id="amh_report_picking_grouped">
            <t t-call="web.html_container">
                <t t-set="docs" t-value="docs.get_data_grouped()"/>
                <t t-if="docs">
                    <t t-set="o" t-value="docs['pickings'][0]"/>
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="row">
                                <div class="col-6">
                                    <div t-if="o.move_ids_without_package and o.move_ids_without_package[0].partner_id and o.move_ids_without_package[0].partner_id.id != o.partner_id.id">
                                        <span><strong>Delivery Address:</strong></span>
                                        <div t-field="o.move_ids_without_package[0].partner_id"
                                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                    </div>
                                    <div t-if="o.picking_type_id.code != 'internal' and (not o.move_ids_without_package or not o.move_ids_without_package[0].partner_id) and o.picking_type_id.warehouse_id.partner_id">
                                        <span><strong>Warehouse Address:</strong></span>
                                        <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                    </div>
                                </div>
                                <div class="col-5 offset-1">
                                    <div t-if="o.picking_type_id.code=='incoming' and o.partner_id">
                                        <span><strong>Vendor Address:</strong></span>
                                    </div>
                                    <div t-if="o.picking_type_id.code=='internal' and o.partner_id">
                                        <span><strong>Warehouse Address:</strong></span>
                                    </div>
                                    <div t-if="o.picking_type_id.code=='outgoing' and o.partner_id">
                                        <span><strong>Customer Address:</strong></span>
                                    </div>
                                    <div t-if="o.partner_id" name="partner_header">
                                        <div t-field="o.partner_id"
                                           t-options='{"widget": "contact", "fields": ["name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                        <p t-if="o.sudo().partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="o.sudo().partner_id.vat"/></p>
                                    </div>
                                </div>
                            </div>
                            <br/>
                            <!--h1 t-field="o.name" class="mt0 float-left"/-->
                            <div class="clearfix"/>
                            <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th t-if="docs['chauffeur']" >CHAUFFEUR</th>
                                    <th t-if="docs['matricule']" >MATRICULE</th>
                                    <th t-if="docs['origin']"><strong>DEVIS</strong></th>
                                    <!--th><strong>State</strong></th-->
                                    <th name="td_sched_date_h" width="20%"><strong>DATE PLANIFIEE</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td t-if="docs['chauffeur']">
                                        <span t-esc="docs['chauffeur']"/>
                                    </td>
                                    <td t-if="docs['matricule']">
                                        <span t-esc="docs['matricule']"/>
                                    </td>
                                    <td t-if="docs['origin']" width="50%">
                                        <span t-esc="docs['origin']"/>
                                    </td>
                                    <!--td>
                                        <span t-field="o.state"/>
                                    </td-->
                                    <td name="td_sched_date" width="50%">
                                        <span t-esc="docs['scheduled_date']"/>
                                    </td>
                                </tr>
                            </tbody>
                            </table>
                            <br/>
                            <br/>
                            <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th t-if="docs['pickings_str']"><strong>ORIGINE</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td t-if="docs['pickings_str']" width="50%">
                                        <span t-esc="docs['pickings_str']"/>
                                    </td>
                                </tr>
                            </tbody>
                            </table>
                            <br/>
                            <br/>
                            <table class="table table-sm" t-if="docs['grouped']">
                                <t t-set="has_barcode" t-value="True"/>
                                <t t-set="has_serial_number" t-value="True" groups="stock.group_production_lot"/>
                                <thead>
                                    <tr>
                                        <th><strong>Product</strong></th>
                                        <th><strong>Quantity</strong></th>
                                        <th width="12%" align="left"><strong>From</strong>
                                        </th>
                                        <th width="12%"><strong>To</strong></th>
                                        <th width="12%">
                                            <strong>DLC</strong>
                                        </th>
                                        <th width="15%" class="text-center" t-if="has_serial_number">
                                           <strong>Lot/Serial Number</strong>
                                        </th>
                                        <!-- <th width="15%" class="text-center" t-if="has_barcode"><strong>
                                            Product Barcode</strong>
                                        </th> -->
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="docs['grouped'].values()" t-as="grp_categ">
                                        <tr>
                                            <td colspan="100%" class="text-center">
                                                <strong t-esc="grp_categ['categ'].display_name"/>
                                            </td>
                                        </tr>

                                        <t t-foreach="grp_categ['move_ids_without_package'].sorted(key=lambda m: m.product_id.id)" t-as="move">
                                            <t t-foreach="move.move_line_ids.sorted(key=lambda ml: ml.location_id.id)" t-as="ml">
                                                <tr>
                                                    <td>
                                                        <span t-field="ml.product_id.display_name"/><br/>
                                                        <span t-field="ml.product_id.description_picking"/>
                                                    </td>
                                                    <td>
                                                        <span t-if="o.state != 'done'" t-field="ml.product_uom_qty"/>
                                                        <span t-if="o.state == 'done'" t-field="ml.qty_done"/>
                                                        <span t-field="ml.product_uom_id" groups="uom.group_uom"/>

                                                    </td>
                                                    <td width="12%">
                                                        <span t-esc="ml.location_id.display_name"/>
                                                            <t t-if="ml.package_id">
                                                                <span t-field="ml.package_id"/>
                                                            </t>
                                                    </td>
                                                    <td width="12%">
                                                        <div>
                                                            <span t-field="ml.location_dest_id"/>
                                                            <t t-if="ml.result_package_id">
                                                                <span t-field="ml.result_package_id"/>
                                                            </t>
                                                        </div>
                                                    </td>

                                                    <td width="12%">
                                                        <span t-if="ml.lot_id" t-field="ml.lot_id.life_date"/>
                                                    </td>

                                                    <td width="15%" class=" text-center h6" t-if="has_serial_number">
                                                        <img t-if="has_serial_number and (ml.lot_id or ml.lot_name)" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=1' % ('Code128', ml.lot_id.name, 600, 100)" style="width:100%;height:35px;" alt="Barcode"/>

                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </t>
                                  </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>

